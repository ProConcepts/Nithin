@model IEnumerable<Employee>

<h2>Manage your Team.</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Employee ID
            </th>
            <th>
                Employee Name
            </th>
            <th>
                Employee Salary
            </th>
            <th>
                Employee Department
            </th>
            <th>
                <a asp-action="AddEmployee" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Employee</a>
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Salary
                </td>
                <td>
                    @item.Department
                </td>
                <td>
                    <a asp-action="EditEmployee" asp-route-id="@item.Id"><i class="fa fa-marker fa_lg"></i></a>
                    <a asp-action="DeleteEmployee" asp-route-id="@item.Id" class="text-danger m-lg-1" onclick="return confirm('Are you sure you want to delete employee with Id: @item.Id and Name: @item.Name');">
                    <i class="fa fa-trash-alt fa_lg"></i></a>
                </td>
            </tr>

        }
    </tbody>
</table>


