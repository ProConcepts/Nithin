<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-primary navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">Pro Concepts</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Employee/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Employee" asp-action="DeleteEmployee">Delete</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Career" asp-action="Index">Career</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Employee" asp-action="Index">Test Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index" asp-area="Blogs">Blogs</a>
                </li>
            </ul>
        </div>
    </nav>

    <br />
    <div>
        @RenderBody()
    </div>

    <footer class="bg-primary text-white text-center fixed-bottom">
        <div class="p-3" style="background-color: rgba(0,0,0,0.2);">
            Copyright &copy; @DateTime.Now.Year
        </div>
    </footer>

    <script type="text/javascript" src="~/lib/jquery/jquery.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
